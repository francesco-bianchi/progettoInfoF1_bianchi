CREATE DATABASE Formula1;
USE Formula1;

CREATE TABLE Scuderie (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome_scuderia VARCHAR(255) NOT NULL,
    nazionalita_scuderia VARCHAR(100)
);

CREATE TABLE Piloti (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(255) NOT NULL,
    cognome VARCHAR(255) NOT NULL,
    nazionalita VARCHAR(100),
    immagine VARCHAR(5000)
);

CREATE TABLE Piloti_Scuderie (
    pilota_id INT,  
    scuderia_id INT,  
    anno_inizio INT,  
    anno_fine INT,  -- Anno in cui il pilota ha lasciato la scuderia (NULL se è ancora con la scuderia)
    FOREIGN KEY (pilota_id) REFERENCES Piloti(id),  
    FOREIGN KEY (scuderia_id) REFERENCES Scuderie(id),
    PRIMARY KEY (pilota_id, scuderia_id, anno_inizio)
);


CREATE TABLE Campionati (
    id INT PRIMARY KEY AUTO_INCREMENT,
    anno INT NOT NULL
);

CREATE TABLE Classifiche_Piloti (
    campionati_id INT NOT NULL,  
    posizione INT NOT NULL,  
    pilota_id INT,  
    punteggio_totale INT,  
    scuderia_id INT,  
    FOREIGN KEY (campionati_id) REFERENCES Campionati(id),
    FOREIGN KEY (pilota_id) REFERENCES Piloti(id),
    FOREIGN KEY (scuderia_id) REFERENCES Scuderie(id),
    PRIMARY KEY (campionati_id, posizione, pilota_id)
);

CREATE TABLE Classifiche_Costruttori (
    campionati_id INT NOT NULL,
    posizione INT NOT NULL,
    scuderia_id INT NOT NULL,
    punteggio_totale INT NOT NULL,
    PRIMARY KEY (campionati_id, posizione),
    FOREIGN KEY (scuderia_id) REFERENCES Scuderie(id)
);

CREATE TABLE Circuiti (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(255) NOT NULL,
    paese VARCHAR(100),
    lunghezza_km DECIMAL(5,2),
    tipo_circuito VARCHAR(100)
);

CREATE TABLE Gare (
    id INT PRIMARY KEY AUTO_INCREMENT,
    campionato_id INT NOT NULL, 
    circuito_id INT, 
    data DATE,
	 FOREIGN KEY (campionato_id) REFERENCES Campionati(id),
    FOREIGN KEY (circuito_id) REFERENCES Circuiti(id)
);

CREATE TABLE PunteggiGara_2025 (
    id INT PRIMARY KEY AUTO_INCREMENT,
    gara_id INT, 
    pilota_id INT,  
    punti INT,  
    posizione INT, 
	 punteggio_sprint INT, 
    FOREIGN KEY (gara_id) REFERENCES Gare(id),  
    FOREIGN KEY (pilota_id) REFERENCES Piloti(id)  
);

INSERT INTO Campionati (anno)
VALUES
    (2020),
    (2021),
    (2022),
    (2023),
    (2024),
    (2025);
 



